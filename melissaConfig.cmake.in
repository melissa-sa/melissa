# Melissa cmake module
# This module sets the following variables in your project::
#
#   Melissa_FOUND - true if Melissa found on the system
#   Melissa_INCLUDE_DIR - the directory containing Melissa headers
#   Melissa_LIBRARY - the library for Melissa API
#   Melissa_STATIC_LIBRARY - the statistics internal library

@PACKAGE_INIT@

set(PN Melissa)
set_and_check(${PN}_INCLUDE_DIR "@CMAKE_INSTALL_FULL_INCLUDEDIR@")
set_and_check(${PN}_LIBRARY "@CMAKE_INSTALL_FULL_LIBDIR@/libmelissa_api.so")
set_and_check(${PN}_STAS_LIBRARY "@CMAKE_INSTALL_FULL_LIBDIR@/libmelissa_stats.a")

# needed so other projects find the set env scripts and so on:
set_and_check(${PN}_PATH "@CMAKE_INSTALL_PREFIX@")

check_required_components(${PN})
