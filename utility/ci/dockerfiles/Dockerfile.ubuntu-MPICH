FROM gitlab/gitlab-runner:latest

# Change gitlab's default entrypoint
ENTRYPOINT /bin/bash

# Install Melissa dependencies and create a non-root user
RUN apt-get update && \
    apt-get -y install build-essential cmake gfortran libopenblas-dev libzmq5-dev pkg-config python3 python3-numpy libmpich-dev && \
    adduser \
        --uid=1000 \
        --shell=/bin/bash \
        --gecos='Docker,,,,' \
        --disabled-password \
        docker

# Switch to non-root user
USER docker
WORKDIR /home/docker