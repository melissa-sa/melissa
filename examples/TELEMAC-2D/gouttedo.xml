       <python>
def plot( data ) :
    from os import getcwd
    import mtlplots.myPlot2dPerspective3d
    from mtlplots.myPlot2dPerspective3d import myPlot2dPerspective3d
    zlimits=[0.0, 4.0]
    example_dir = getcwd() # not used by myPlot2dPerspective3d
    # timeIndex -> 0s 0.6s 1.2s  nameIndex -> "'WATER DEPTH     '"
    myPlot2dPerspective3d( data,example_dir, "gouttedo", timeIndexs=[0], nameIndex=2, colorMapFileName='jet', zlimits=zlimits )
    myPlot2dPerspective3d( data,example_dir, "gouttedo", timeIndexs=[3], nameIndex=2, colorMapFileName='jet', zlimits=zlimits  )
    myPlot2dPerspective3d( data,example_dir, "gouttedo", timeIndexs=[6], nameIndex=2, colorMapFileName='jet', zlimits=zlimits  )
    myPlot2dPerspective3d( data,example_dir, "gouttedo", timeIndexs=[9], nameIndex=2, colorMapFileName='jet', zlimits=zlimits  )
    myPlot2dPerspective3d( data,example_dir, "gouttedo", timeIndexs=[12], nameIndex=2, colorMapFileName='jet', zlimits=zlimits  )
    myPlot2dPerspective3d( data,example_dir, "gouttedo", timeIndexs=[15], nameIndex=2, colorMapFileName='jet', zlimits=zlimits  )

    # timeIndex -> 1.8s 2.4s 3.0s nameIndex -> "'WATER DEPTH     '"
    myPlot2dPerspective3d( data,example_dir, "gouttedo", timeIndexs=[-1], nameIndex=2, colorMapFileName='jet', zlimits=zlimits  )
    return [],[],[],[]
       </python>
